# Staging environment configuration for Settlers of Stock
# This file contains non-sensitive configuration values
# Sensitive values are managed through Google Secret Manager

# Environment
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=DEBUG

# GCP Configuration
GCP_PROJECT_ID=settlers-of-stock-staging
GCP_REGION=us-central1
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-1.5-flash

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Settlers of Stock (Staging)

# CORS Configuration (staging domains)
CORS_ORIGINS=["https://staging.settlers-of-stock.com","https://staging-app.settlers-of-stock.com","http://localhost:3000"]
ALLOWED_HOSTS=["staging.settlers-of-stock.com","staging-app.settlers-of-stock.com","localhost","127.0.0.1"]

# Cache Configuration
REDIS_HOST=10.0.0.3
REDIS_PORT=6379

# Application Settings
TESTING_MODE=false
SKIP_EXTERNAL_APIS=false

# Security Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SMTP_PORT=587
SMTP_TLS=true

# Note: Sensitive values are loaded from Google Secret Manager:
# - SECRET_KEY
# - DATABASE_URL
# - REDIS_URL
# - ALPHA_VANTAGE_API_KEY
# - NEWS_API_KEY
# - REDDIT_CLIENT_ID
# - REDDIT_CLIENT_SECRET
# - SMTP_HOST
# - SMTP_USER
# - SMTP_PASSWORD